<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingLeft="16dp"
  android:paddingRight="16dp"
  tools:context=".ui.MainActivity">

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/title"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tab_foods"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str_foods"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/title" />

  <TextView
    android:id="@+id/tab_favourites"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/str_favourites"
    android:textStyle="bold"
    app:layout_constraintTop_toBottomOf="@+id/title"
    app:layout_constraintStart_toEndOf="@+id/tab_foods"
    android:layout_marginStart="16dp"/>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/list_foods"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tab_foods"
    app:layout_constraintVertical_bias="0.0"
    tools:listitem="@layout/food_item" />
</androidx.constraintlayout.widget.ConstraintLayout>